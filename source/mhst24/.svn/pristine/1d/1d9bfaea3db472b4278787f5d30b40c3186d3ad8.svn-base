<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView 
        android:id="@+id/txttmp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="Khoảng cách tìm kiếm:"/>

    <EditText
        android:id="@+id/editDistance"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txttmp1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="number"
        android:singleLine="true"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <TextView 
        android:id="@+id/txttmp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/editDistance"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="Giá tiền moto:"/>

    <EditText
        android:id="@+id/editMoneyMoto"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txttmp2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="number"
        android:singleLine="true"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <TextView 
        android:id="@+id/txttmp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/editMoneyMoto"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="Giá tiền taxi:"/>

    <EditText
        android:id="@+id/editMoneyTaxi"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txttmp3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="number"
        android:singleLine="true"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <TextView 
        android:id="@+id/txttmp4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editMoneyTaxi"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="Giá tiền xe khách:"/>

    <EditText
        android:id="@+id/editMoneyCar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txttmp4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="number"
        android:singleLine="true"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editMoneyCar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Cập nhật" />

</RelativeLayout>
