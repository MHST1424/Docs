<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/img_avata"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:src="@drawable/hinh1" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/img_avata"
        android:text="Tunghaui"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_location_start"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_name"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/img_avata"
        android:text="Cầu giấy"
        android:textColor="#0000FF"
        android:textSize="20dp"
        android:typeface="serif"
        android:textStyle="bold" />
	<ImageView
	    android:id="@+id/img_tam"
        android:layout_below="@id/txt_location_start"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/abc_ic_search" />


    <TextView
        android:id="@+id/txt_location_end"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@+id/img_tam"
        android:layout_toRightOf="@id/img_avata"
        android:text="Nhổn"
        android:textColor="#0000FF"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/img_tam"
        android:layout_toRightOf="@+id/img_tam"
        android:text="2h30p"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>