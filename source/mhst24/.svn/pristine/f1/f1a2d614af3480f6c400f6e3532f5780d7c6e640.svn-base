<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/nen2" >
	<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1" >
	<TextView 
        android:id="@+id/textThongtin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin đăng ký"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView 
        android:id="@+id/textNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:text="Tên nick"/>
    <TextView 
        android:id="@+id/textHotendk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textNick"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="Họ tên"/>
    <TextView 
        android:id="@+id/textNgaysinhdk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textHotendk"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="Ngày sinh"/>
    <TextView 
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textNgaysinhdk"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="Email"/>
    <TextView 
        android:id="@+id/textVisiable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textEmail"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="Visiable"/>
    <TextView 
        android:id="@+id/textAvata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textVisiable"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:text="Avata"/>
    <Button 
        android:id="@+id/btnCancel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textAvata"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:text="Cancel"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <Button 
        android:id="@+id/btnEdit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textAvata"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:text="Done"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <EditText 
        android:id="@+id/editUser"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@id/textNick"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:hint="Nhập tên nick"/>
    <EditText 
        android:id="@+id/editName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@id/textHotendk"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:hint="Họ tên"/>

    <EditText 
        android:id="@+id/editBirthday"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@id/textNgaysinhdk"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:hint="Ngày sinh"/>
    <EditText 
        android:id="@+id/editEmail"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@id/textEmail"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:singleLine="true"
        android:hint="Email"/>
    <Button 
        android:id="@+id/btnchangevisiavle"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@id/textVisiable"
        android:layout_marginLeft="120dp"
        android:singleLine="true"
        android:hint="visiable"/>
	<ImageView 
	    android:id="@+id/imgavata"
	    android:layout_width="100dp"
	    android:layout_height="100dp"
	    android:layout_alignBaseline="@id/textAvata"
	    android:layout_marginLeft="120dp"
	    android:src="@drawable/ic_launcher"/>

	<Button
	    android:id="@+id/btnChangeAvata"
	    android:layout_width="80dp"
	    android:layout_height="wrap_content"
	    android:layout_alignRight="@+id/editEmail"
	    android:layout_below="@+id/textAvata"
	    android:layout_marginTop="25dp"
	    android:text="Change"
	    android:textSize="15dp"
	    android:textStyle="bold" />

</RelativeLayout>
</ScrollView>